<div class="page-content">
  <%= form_for(@project) do |f| %>
      <% if @project.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

            <ul>
              <% @project.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field">
        <%= f.label :type %>
        <%= f.collection_select :p_type, Project::PROJECTTYPES, :to_s, :humanize, :selected=>@project.p_type %>
      </div>


      <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :description %><br />
        <%= f.text_field :description %>
      </div>
      <div class="field">
        <%= f.label :content %><br />
        <%= f.text_area :content %>
      </div>
      <div class="field">
        <%= f.label :thumbnail %><br />
        <%= f.text_field :thumbnail %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
  <% end %>
</div>

