<div class="page-content ">

  <div class="row-fluid">
    <div class="span12">
      <div class="span2">
        Professional
      </div>
      <div class="span8">
        <ul id="images" class="rs-slider" >
          <% @professional_projects.each do |project| %>

              <li class="group">
                <a href="#">
                  <img src="/assets/ProjectBackground.png" alt="" />
                </a>
                <div class="rs-caption rs-top">
                  <%= project.thumbnail %>
                  <% if can? :manage, Project %>
                      <%= link_to 'Edit', edit_project_path(project) %>
                  <% end %>
                  <h3><%= project.title %></h3>
                  <h4><%= project.description %> </h4>
                  <p><%=project.content%></p>
                </div>

              </li>
          <% end %>
        </ul>

        <br />
      </div>
    </div>
