<% if can? :manage, Level %>

    <div class="page-content">
      <h1>Listing Levels</h1>

      <table>
        <tr>
          <th>Game</th>
          <th>Title</th>
          <th>Description</th>
          <th>Download</th>
          <th>Thumbnail</th>
          <th>Background</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>

        <% @levels.each do |level| %>
            <tr>
              <td><%= level.game %></td>
              <td><%= level.title %></td>
              <td><%= level.description %></td>
              <td><%= level.download %></td>
              <td><%= level.thumbnail %></td>
              <td><%= level.background %></td>
              <td><%= link_to 'Edit', edit_level_path(level) %></td>
            </tr>
        <% end %>
      </table>

      <br/>
      <%= link_to 'New Level', new_level_path %>
      <br/>
      <br/>
        <h1>Listing artworks</h1>

        <table>
          <tr>
            <th>Type</th>
            <th>Title</th>
            <th>Description</th>
            <th>Thumbnail</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>

          <% @artworks.each do |artwork| %>
              <tr>
                <td><%= artwork.a_type %></td>
                <td><%= artwork.title %> </td>
                <td><%= artwork.description %></td>
                <td><%= artwork.thumbnail %></td>
                <td><%= link_to 'show', artwork%></td>
                <td><%= link_to 'Edit', edit_artwork_path(artwork) %></td>
              </tr>
          <% end %>
        </table>

        <br />

        <%= link_to 'New Artwork', new_artwork_path %>
      <br/>
      <br/>
      <h1>Listing projects</h1>

      <table>
        <tr>
          <th>Type</th>
          <th>Description</th>
          <th>Thumbnail</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>

        <% @projects.each do |project| %>
            <tr>
              <td><%= project.p_type %></td>
              <td><%= project.description %></td>
              <td><%= project.thumbnail %></td>
              <td><%= link_to 'Edit', edit_project_path(project) %></td>
            </tr>
        <% end %>
      </table>

      <br />

      <%= link_to 'New Project', new_project_path %>


    </div>
<%else%>
    <div class="page-content">
      <h1>You dont have permission to access this.</h1>
      <h2><%= link_to 'Sign in', '/signin' %></h2>
    </div>
<% end %>