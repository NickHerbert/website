<div class="row-fluid">
    <div class="span12" >
        <div class="game-content-header" >
            <h1>{{title}}</h1>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="game-content-body" >

            <p><img src="{{thumbnail}}" style="height:100px;width:100px;"/>{{content}}</p>
            <hr>
            {{#if video}}
                <p style="float:right;">Watch a video here: <a href="">Link</a></p>
            {{/if}}
            {{#if download}}
                <p>Download Link: {{download}}</p>
            {{/if}}

        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="game-content-gallery" >
            {{! gallery goes here}}

        </div>
    </div>
</div>